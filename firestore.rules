rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FocusFlow Security Rules
     * 
     * Core Philosophy: This ruleset enforces a strict user-ownership model where all data is
     * logically and physically partitioned by the user's unique authentication ID (UID).
     */

    // --- Helper Functions ---

    /** @description Checks if the request is made by a signed-in user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the authenticated user matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    /**
     * @description Rules for the user_profiles collection and its subcollections.
     * Implements a recursive ownership model: if you own the parent path, you own the data.
     */
    match /user_profiles/{userId} {
      // Allow the owner to read and write their own profile document
      allow read, write: if isOwner(userId);

      /**
       * @description Matches all subcollections (tasks, study_sessions, goals, etc.)
       * and enforces that the requester must be the owner of the parent profile.
       */
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}